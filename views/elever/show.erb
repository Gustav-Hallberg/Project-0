<h2 class="elev-show-subheader">Elev Info</h2>

<div class="elev-show-container">
    <div class="elev-show-info-container">
        <div class="elev-show-image-container">
            <img src='<%= @elev["image_url"]%>' alt="Profilbild för elev">
        </div>

        <div class="elev-show-personal-container">
            <div class="elev-show-name-container">
                <p><%= @elev["name"]%>, <%= @elev["class"]%>, <%= @elev["age"]%></p>
            </div>

            <div class="elev-show-desc-container">
                <p class="elev-show-desc"><%= @elev["description"]%></p>
            </div>
        </div>
    </div>
    <div class="elev-show-button-container">
        <a class="elev-show-back-button" href="/elever/<%= @previous_page%>">&#8592 Tillbaka</a>
        <a class="elev-show-next-button" href="/elever/<%= @next_page%>">Nästa &#8594</a>
    </div>
</div>