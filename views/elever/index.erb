<div class="index">
    <div class="elever">
        <h2 class="elever">Elever:</h2>
        <div class="elever-list">
            <ul>
                <% @currentClass = "" %>
                <% @elever.each do | f | %>
                    <% if f["class"] == @currentClass%>
                        <li class="elev-list"><a class="elev-list-item" href="/elever/<%=f["id"]%>"> <%= f["name"]%> </a></li>
                    <% else %>
                        <% @currentClass = f["class"] %>
                        <p><%=@currentClass%></p>
                        <li class="elev-list"><a class="elev-list-item" href="/elever/<%=f["id"]%>"> <%= f["name"]%> </a></li>
                    <% end %>
                <% end %>
            </ul>
        </div>
    </div>
    <div class="run-game">
        <button class="run-game" onClick="window.location.href = '/elever/game'">Kör spel 1!</button>
        <button class="run-game" onClick="window.location.href = '/elever/game2'">Kör spel 2!</button>
    </div>
</div>